{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [ "react-scripts" ],
    "plugins": [
      {"name": "@strv/react" }, 
      {"name": "@strv/typescript"},
      {"name": "@strv/typescript/react"},
      {"name": "@strv/typescript/style"}
    ]
  },
  "include": [
    "src"
  ]
}
